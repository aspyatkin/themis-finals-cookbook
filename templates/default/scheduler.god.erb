God.watch do |w|
  w.name = 'scheduler'
  w.dir = '<%= @basedir %>'
  w.uid = '<%= @user %>'
  w.gid = '<%= @group %>'
  w.log = '<%= @logs_basedir %>/scheduler.log'
  w.start = 'bundle exec ruby scheduler.rb'
  w.env = {
    'LOG_LEVEL' => '<%= @log_level %>',
    'STDOUT_SYNC' => '<%= @stdout_sync %>',
    'BEANSTALKD_URI' => '<%= @beanstalkd_uri %>',
    'BEANSTALKD_TUBE_NAMESPACE' => '<%= @beanstalkd_tube_namespace %>',
    'REDIS_HOST' => '<%= @redis_host %>',
    'REDIS_PORT' => '<%= @redis_port %>',
    'REDIS_DB' => '<%= @redis_db %>',
    'PG_HOST' => '<%= @pg_host %>',
    'PG_PORT' => '<%= @pg_port %>',
    'PG_USERNAME' => '<%= @pg_username %>',
    'PG_PASSWORD' => '<%= @pg_password %>',
    'PG_DATABASE' => '<%= @pg_database %>'
  }
  w.keepalive
end
