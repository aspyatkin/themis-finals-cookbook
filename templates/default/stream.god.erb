(0...<%= node['themis-finals']['stream']['processes'] %>).to_a.each do |num|
  God.watch do |w|
    w.group = 'streams'
    w.name = "stream-#{num}"
    w.dir = '<%= node['themis-finals']['basedir'] %>/stream'
    w.uid = '<%= node['themis-finals']['user'] %>'
    w.gid = '<%= node['themis-finals']['group'] %>'
    w.log = "<%= node['themis-finals']['basedir'] %>/logs/stream-#{num}.log"
    w.start = './bin/app'
    w.keepalive
    w.env = {
      'PORT' => "#{4000 + num}"
    }
  end
end
