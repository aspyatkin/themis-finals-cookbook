(0...<%= @processes %>).to_a.each do |num|
  God.watch do |w|
    w.group = 'stream'
    w.name = "stream-#{num}"
    w.dir = '<%= @basedir %>'
    w.uid = '<%= @user %>'
    w.gid = '<%= @group %>'
    w.log = "<%= @logs_basedir %>/stream-#{num}.log"
    w.start = './bin/app'
    w.keepalive
    w.env = {
      'PORT' => "#{<%= @port_range_start %> + num}",
      'LOG_LEVEL' => '<%= @log_level %>',
      'REDIS_HOST' => '<%= @redis_host %>',
      'REDIS_PORT' => '<%= @redis_port %>',
      'REDIS_DB' => '<%= @redis_db %>',
      'PG_HOST' => '<%= @pg_host %>',
      'PG_PORT' => '<%= @pg_port %>',
      'PG_USERNAME' => '<%= @pg_username %>',
      'PG_PASSWORD' => '<%= @pg_password %>',
      'PG_DATABASE' => '<%= @pg_database %>'
    }
  end
end
