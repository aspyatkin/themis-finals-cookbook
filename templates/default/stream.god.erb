(0...<%= @processes %>).to_a.each do |num|
  God.watch do |w|
    w.group = 'streams'
    w.name = "stream-#{num}"
    w.dir = '<%= @basedir %>/stream'
    w.uid = '<%= @user %>'
    w.gid = '<%= @group %>'
    w.log = "<%= @basedir %>/logs/stream-#{num}.log"
    w.start = './bin/app'
    w.keepalive
    w.env = {
      'PORT' => "#{4000 + num}"
    }
  end
end
